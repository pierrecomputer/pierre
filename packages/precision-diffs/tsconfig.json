{
  "extends": "../../tsconfig.options.json",
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.json"],
  "compilerOptions": {
    "outDir": "dist",
    "emitDeclarationOnly": false,
    "baseUrl": ".",
    "rootDir": "src",
    "jsx": "react-jsx",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "target": "ES2017",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false
  }
}
